<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ViewPagerOneFragment">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:id="@+id/rlLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.ncd.beenlovememory.widget.HeartWaveView
            android:id="@+id/heartWaveView"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            app:hwv_heart_color="@color/colorHeart"
            app:hwv_sub_title="Heart"
            app:hwv_sub_title_color="#FF4169E1"
            android:layout_centerInParent="true"
            app:hwv_sub_title_size="0sp"
            app:hwv_title="20%"
            app:hwv_title_color="#FF4169E1"
            app:hwv_title_size="0sp"
            app:hwv_wav_color="@color/colorHeart" />

        <com.ncd.beenlovememory.widget.HeartWaveView2
            android:id="@+id/heartWaveView2"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            app:hwv_heart_color="@color/colorHeart"
            app:hwv_sub_title="Heart"
            android:layout_centerInParent="true"
            app:hwv_sub_title_color="#FF4169E1"
            app:hwv_sub_title_size="0sp"
            app:hwv_title="20%"
            app:hwv_title_color="#FF4169E1"
            app:hwv_title_size="0sp"
            app:hwv_wav_color="@color/colorHeart" />

        <RelativeLayout
            android:paddingBottom="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/qwigley_regular"
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="345"
                android:textColor="@color/white"
                android:textSize="@dimen/_60sdp" />

            <TextView
                android:layout_marginTop="@dimen/_60sdp"
                android:fontFamily="@font/qwigley_regular"
                android:id="@+id/tv_day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:maxLength="10"
                android:text="@string/days"
                android:textColor="@color/white"
                android:textSize="@dimen/_35sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>